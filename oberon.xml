<?xml version="1.0"?>

<!DOCTYPE MODE SYSTEM "xmode.dtd">

<!-- Oberon-07 mode, by giahung -->
<!-- Doesn't support Oberon-2 only syntax -->

<MODE>
	<PROPS>
		<PROPERTY NAME="commentStart" VALUE="(*" />
		<PROPERTY NAME="commentEnd" VALUE="*)" />
	</PROPS>
	<RULES IGNORE_CASE="FALSE" HIGHLIGHT_DIGITS="TRUE">
		<!-- Comment -->
		<SPAN TYPE="COMMENT1">
			<BEGIN>(*</BEGIN>
			<END>*)</END>
		</SPAN>

		<!-- String and char literal -->
		<SPAN TYPE="LITERAL1" ESCAPE="\" NO_LINE_BREAK="TRUE">
			<BEGIN>"</BEGIN>
			<END>"</END>
		</SPAN>

		<SEQ TYPE="OPERATOR">^</SEQ>
		<SEQ TYPE="OPERATOR">@</SEQ>
		<SEQ TYPE="OPERATOR">:=</SEQ>
		<SEQ TYPE="OPERATOR">=</SEQ>
		<SEQ TYPE="OPERATOR">#</SEQ>
		<SEQ TYPE="OPERATOR">~</SEQ>
		<SEQ TYPE="OPERATOR">&amp;</SEQ>
		<SEQ TYPE="OPERATOR">&lt;&gt;</SEQ>
		<SEQ TYPE="OPERATOR">&gt;=</SEQ>
		<SEQ TYPE="OPERATOR">&lt;=</SEQ>
		<SEQ TYPE="OPERATOR">&gt;</SEQ>
		<SEQ TYPE="OPERATOR">&lt;</SEQ>
		<SEQ TYPE="OPERATOR">+</SEQ>
		<SEQ TYPE="OPERATOR">-</SEQ>
		<SEQ TYPE="OPERATOR">/</SEQ>
		<SEQ TYPE="OPERATOR">*</SEQ>

		<KEYWORDS>
			<!-- Reserved words -->
			<KEYWORD1>ARRAY</KEYWORD1>
			<KEYWORD1>BEGIN</KEYWORD1>
			<KEYWORD1>BY</KEYWORD1>
			<KEYWORD1>CASE</KEYWORD1>
			<KEYWORD1>CONST</KEYWORD1>
			<KEYWORD1>DIV</KEYWORD1>
			<KEYWORD1>DO</KEYWORD1>
			<KEYWORD1>ELSE</KEYWORD1>
			<KEYWORD1>ELSIF</KEYWORD1>
			<KEYWORD1>END</KEYWORD1>
			<KEYWORD1>FALSE</KEYWORD1>
			<KEYWORD1>FOR</KEYWORD1>
			<KEYWORD1>IF</KEYWORD1>
			<KEYWORD1>IMPORT</KEYWORD1>
			<KEYWORD1>IN</KEYWORD1>
			<KEYWORD1>IS</KEYWORD1>
			<KEYWORD1>MOD</KEYWORD1>
			<KEYWORD1>MODULE</KEYWORD1>
			<KEYWORD1>NIL</KEYWORD1>
			<KEYWORD1>OF</KEYWORD1>
			<KEYWORD1>OR</KEYWORD1>
			<KEYWORD1>POINTER</KEYWORD1>
			<KEYWORD1>PROCEDURE</KEYWORD1>
			<KEYWORD1>RECORD</KEYWORD1>
			<KEYWORD1>REPEAT</KEYWORD1>
			<KEYWORD1>RETURN</KEYWORD1>
			<KEYWORD1>THEN</KEYWORD1>
			<KEYWORD1>TO</KEYWORD1>
			<KEYWORD1>TRUE</KEYWORD1>
			<KEYWORD1>TYPE</KEYWORD1>
			<KEYWORD1>UTIL</KEYWORD1>
			<KEYWORD1>VAR</KEYWORD1>
			<KEYWORD1>WHILE</KEYWORD1>

			<!-- Predefined identifiers -->
			<LITERAL2>ABS</LITERAL2>
			<LITERAL2>ASR</LITERAL2>
			<LITERAL2>ASSERT</LITERAL2>
			<LITERAL2>BOOLEAN</LITERAL2>
			<LITERAL2>BYTE</LITERAL2>
			<LITERAL2>CHAR</LITERAL2>
			<LITERAL2>CHR</LITERAL2>
			<LITERAL2>DEC</LITERAL2>
			<LITERAL2>EXCL</LITERAL2>
			<LITERAL2>FLOOR</LITERAL2>
			<LITERAL2>FLT</LITERAL2>
			<LITERAL2>INC</LITERAL2>
			<LITERAL2>INCL</LITERAL2>
			<LITERAL2>INTEGER</LITERAL2>
			<LITERAL2>LEN</LITERAL2>
			<LITERAL2>LSL</LITERAL2>
			<LITERAL2>NEW</LITERAL2>
			<LITERAL2>ODD</LITERAL2>
			<LITERAL2>ORD</LITERAL2>
			<LITERAL2>PACK</LITERAL2>
			<LITERAL2>REAL</LITERAL2>
			<LITERAL2>ROR</LITERAL2>
			<LITERAL2>SET</LITERAL2>
			<LITERAL2>UNPK</LITERAL2>

			<!-- OBNC specific -->
			<!-- The Module SYSTEM -->

			<!-- Function procedures -->
			<KEYWORD2>ADR</KEYWORD2>
			<KEYWORD2>SIZE</KEYWORD2>
			<KEYWORD2>BIT</KEYWORD2>

			<!-- Proper procedures -->
			<KEYWORD2>GET</KEYWORD2>
			<KEYWORD2>PUT</KEYWORD2>
			<KEYWORD2>COPY</KEYWORD2>

			<!-- RISC processor specific -->

			<!-- Function procedures -->
			<KEYWORD2>VAL</KEYWORD2>
			<KEYWORD2>ADC</KEYWORD2>
			<KEYWORD2>SBC</KEYWORD2>
			<KEYWORD2>UML</KEYWORD2>
			<KEYWORD2>COND</KEYWORD2>

			<!-- Proper procedures -->
			<KEYWORD2>LED</KEYWORD2>

			<!-- End of RISC processor specific -->
			<!-- End of The Module SYSTEM -->
			<!-- End of OBNC specific -->

			<!-- oberonc specific -->
			<KEYWORD3>DEFINITION</KEYWORD3>
			<!-- End of oberonc specific -->

		</KEYWORDS>
	</RULES>
</MODE>
